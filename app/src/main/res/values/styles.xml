<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonGreen">
        <item name="android:backgroundTint">@color/md_green_400</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttonDarkGreen">
        <item name="android:backgroundTint">@color/md_green_700</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttonRed">
        <item name="android:backgroundTint">@color/md_red_400</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="defaultInvisible" parent="Widget.AppCompat.ProgressBar">
        <item name="android:visibility">gone</item>
    </style>
</resources>